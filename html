<title>Подія onclick</title>
  <script>
   function isEmail() {
    var str = document.getElementById("email").value;
    var status = document.getElementById("status");
    var re = /^[^\s()<>@,;:\/]+@\w[\w\.-]+\.[a-z]{2,}$/i;
    if (re.test(str)) status.innerHTML = "Адреса правильна";
      else status.innerHTML = "Адреса неправильна";
    if(isEmpty(str)) status.innerHTML = "Поле пусте";
   }
   function isEmpty(str){
    return (str == null) || (str.length == 0);
   }
  </script>
